---
interface Props {
  typedata:any;
  placeholderdata:any;
  requireddata:boolean;
  id:string
}

const { typedata, placeholderdata, requireddata, id } = Astro.props;
---
{
    requireddata ? (
        <input id={id} class="border-[0.1rem] rounded w-full md:w-6/12 h-[45px] pl-[6px] outline-blue-700 border-slate-500" type={typedata} placeholder={placeholderdata} required/>

    ):(
        <input id={id} class="border-[0.1rem] rounded w-full md:w-6/12 h-[45px] pl-[6px] outline-blue-700 border-slate-500" type={typedata} placeholder={placeholderdata}/>

    )

}
